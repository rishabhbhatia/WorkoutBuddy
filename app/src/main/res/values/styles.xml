<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar_Title_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Splash Screen -->
    <style name="Splash_Text_Label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Login Screen -->
    <style name="Login_Text_Label">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/login_label</item>
    </style>

    <style name="Login_Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/login_button_bg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Login_Forgot_Pass">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/login_button_bg</item>
    </style>

    <!-- Landing Screen -->
    <style name="Landing_Screen_Profile_Name">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Landing_Screen_New_Workout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Landing_Screen_Date">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Landing_Screen_Clients_Label">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Landing_Screen_New_Workout_Footer">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Landing_Screen_My_Clients_Message_Label">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Forgot Password Screen -->
    <style name="Forgot_Pass_Text_Label">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/login_label</item>
    </style>

    <style name="Forgot_Pass_Send_Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/login_button_bg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
